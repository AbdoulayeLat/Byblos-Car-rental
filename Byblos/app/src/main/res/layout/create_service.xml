<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCreateTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFF"
        android:fontFamily="@font/advent_pro"
        android:text="CREATE A SERVICE"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:text="Service Name" />

    <EditText
        android:id="@+id/etServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter the name of the service"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:text="Service Fee" />

    <EditText
        android:id="@+id/etServiceFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter the hourly rate "
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:text="Service Requirements" />

    <EditText
        android:id="@+id/etServiceRequirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter requirements for the service separated by semicolon"
        android:scrollHorizontally="true"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <Button
        android:id="@+id/btnCreateBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFF"
        android:fontFamily="@font/advent_pro"
        android:text="Create the Service"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>