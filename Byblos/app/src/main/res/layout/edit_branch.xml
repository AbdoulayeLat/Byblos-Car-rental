<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCreateTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFF"
        android:fontFamily="@font/advent_pro"
        android:text="EDIT BRANCH"
        android:textAlignment="center"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Branch Name:" />

    <EditText
        android:id="@+id/etBranchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter the name of your Byblos branch"
        android:inputType="textPersonName"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/advent_pro"
        android:text="Branch Address" />

    <EditText
        android:id="@+id/etBranchAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter the address of your branch"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"
        android:text="Branch Phone Number" />

    <EditText
        android:id="@+id/etBranchPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:ems="10"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#A8A8A8"
        android:fontFamily="@font/advent_pro"
        android:hint="Enter the phone number of the branch"
        android:textStyle="bold"
        android:inputType="phone"
        tools:ignore="TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:id="@+id/textView4"
        android:text="Branch Working Hours: Start Time And End Time"
        android:fontFamily="@font/advent_pro"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#A8A8A8"
        android:orientation="horizontal"
        android:weightSum="2">

        <TimePicker
            android:id="@+id/startTime"
            android:layout_width="179dp"
            android:layout_height="112dp"
            android:timePickerMode="spinner"
            android:layout_marginRight = "20sp"
            android:layout_weight="1"/>

        <TimePicker
            android:id="@+id/endTime"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:timePickerMode="spinner"
            android:layout_weight="1"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/advent_pro"
                android:text="Services Available:"
                android:textColor="#FFFFFF" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#00FFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/advent_pro"
                android:text="Services Offered:"
                android:textColor="#FFFFFF" />

            <ListView
                android:id="@+id/listView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id= "@+id/LinL3"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/advent_pro"
            android:text="Cancel"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnDeleteBranch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFF"
            android:fontFamily="@font/advent_pro"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="Delete Branch"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnUpdateBranch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFF"
            android:fontFamily="@font/advent_pro"
            android:layout_marginLeft="10sp"
            android:text="Update Branch"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>